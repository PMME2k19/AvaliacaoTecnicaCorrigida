@model avaliacao_tecnica_V2.ViewModel.AgendaViewModel

<section class="content">
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="panel panel-primary">
                <div class="panel-heading">
                    <a class="panel-title"> Criar Agenda</a>
                </div>
                <hr />
                <div class="panel-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Descricao)
                        @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.dataAgenda)
                        @Html.EditorFor(model => model.dataAgenda, new { htmlAttributes = new { @class = "form-control datepicker" } })
                        @Html.ValidationMessageFor(model => model.dataAgenda, "", new { @class = "text-danger " })
                    </div>

                    <div class="form-group">
                        <label for="servicos">Serviços</label>
                        @Html.DropDownListFor(model => model.ServicoSeleccionado, Model.Servicos, new { @class = "form-control datepicker" })
                    </div>


                </div>
                <div class="panel-footer">

                    <input type="submit" value="Guardar" class="btn btn-success" />
                    @Html.ActionLink("Regressar a Lista", "Index", new { @class = "btn btn-primary" })

                </div>
            </div>

        }

    </div>
</section>

