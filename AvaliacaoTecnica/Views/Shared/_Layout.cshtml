
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
</head>
<body>

    <div class="navbar navbar-inverse navbar-collapse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Clínica Viva Estética", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <p class="navbar-text navbar-right">@Session["username"]</p>
                <ul class="nav navbar-nav  ml-auto">
                    <li>@Html.ActionLink("Nova Agenda", "Create", "Agenda")</li>
                    <li>@Html.ActionLink("Consultar", "Index", "Agenda")</li>
                    <li>@Html.ActionLink("Meu Perfil", "Details", "Cliente")</li>
                    <li>@Html.ActionLink("LogOut", "LogOut", "Login")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Avaliação Técnica V2</p>
        </footer>

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
        $(".datepicker").datepicker({
            dateFormat: "yy/mm/dd"
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
